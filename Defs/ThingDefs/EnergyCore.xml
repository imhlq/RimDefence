<?xml version="1.0" encode="utf-8"?>
<Defs>
    <ThingDef ParentName="BuildingBase">
        <defName>EnergyCore</defName>
        <label>能量核心</label>
        <description>利用暗物质湮灭产生巨大能量的仪器</description>
        <thingClass>Building</thingClass>
        <graphicData>
            <texPath>Things/Building/Power/ChemfuelPoweredGenerator</texPath>
            <graphicClass>Graphic_Single</graphicClass>
            <drawSize>(2,2)</drawSize>
        </graphicData>
        <altitudeLayer>Building</altitudeLayer>
        <passability>PassThroughOnly</passability>
        <pathCost>50</pathCost>
        <blockWind>true</blockWind>
        <fillPercent>1.0</fillPercent>
        <rotatable>false</rotatable>

        <statBases>
            <MarketValue>50000</MarketValue>
            <MaxHitPoints>1000</MaxHitPoints>
            <WorkToBuild>1000</WorkToBuild>
            <Flammability>1.0</Flammability>
            <Beauty>0</Beauty>
        </statBases>

        <tickerType>Normal</tickerType>
        <canOverlapZones>false</canOverlapZones>
        <size>(2,2)</size>
        <building>
            <destroySound>BuildingDestroyed_Metal_Medium</destroySound>
        </building>

        <comps>
            <li Class="CompProperties_Power">
                <compClass>Tower_Defence.EnergyCore</compClass>
                <basePowerConsumption>-1</basePowerConsumption>
                <transmitsPower>true</transmitsPower>
            </li>
        </comps>

    </ThingDef>
</Defs>